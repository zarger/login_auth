<div class="middle_align_new">
<% form_tag :action => "signin" do %>
<p>
	<label for="email">Email</label><br>
	<%= text_field_tag :email %>
</p>
<p>
	<label for="password">Password</label><br>
	<%= password_field_tag :password %>
</p>
<p>
	Remember Me
	<%=check_box_tag :remember_me %>
</p>

<%=submit_tag "Login"%>	

<% end %>
</div>